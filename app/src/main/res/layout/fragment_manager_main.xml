<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:clickable="true">

    <TextView
        android:id="@+id/businessTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="38dp"
        android:fontFamily="serif"
        android:text="Moe's Supply Co. -Manager"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/inventoryBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/businessTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="View Inventory" />

    <Button
        android:id="@+id/warehouseBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Warehouse Inventory"
        android:layout_below="@+id/inventoryBtn"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/statusBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/warehouseBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="View Status Report" />

    <Button
        android:id="@+id/vendorShipmentsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/statusBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="View Todays Vendor SHipments" />

    <Button
        android:id="@+id/pastOrdersBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/vendorShipmentsBtn"
        android:layout_marginTop="15dp"
        android:text="View Fulfilled Orders" />

</RelativeLayout>